<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".UserSignupActivtity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="245dp"
        android:layout_marginLeft="33dp"
        >
        <TextView
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:layout_gravity="left"
            android:text="Create your Account"
            android:textSize="22dp"
            android:textStyle="bold" />


    </LinearLayout>






    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        app:cardElevation="2dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/mobilesignup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/white"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Mobile Nubmer"
                android:inputType="number"
                android:maxLength="10"
                android:padding="15dp"
                android:textSize="15dp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">




        <EditText
            android:id="@+id/passwordsignup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/white"
            android:fontFamily="@font/montserrat_regular"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLength="10"
            android:padding="15dp"
            android:textSize="15dp" />

        <!--            <com.google.android.material.textfield.TextInputLayout-->
        <!--                android:layout_width="match_parent"-->
        <!--                app:passwordToggleEnabled="true"-->
        <!--                android:layout_height="match_parent">-->

        <!--                <com.google.android.material.textfield.TextInputEditText-->
        <!--                    android:layout_width="match_parent"-->
        <!--                    android:id="@+id/password_signup"-->
        <!--                    android:layout_height="match_parent"-->
        <!--                    android:hint="Password.."-->
        <!--                    android:fontFamily="@font/montserrat_regular"-->
        <!--                    android:textSize="15sp"-->
        <!--                    android:background="@color/design_default_color_background"-->
        <!--                    android:inputType="textPassword"/>-->

        <!--            </com.google.android.material.textfield.TextInputLayout>-->






    </androidx.cardview.widget.CardView>





    <Button
        android:id="@+id/btnsignup"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/Darkblue"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Submit"
        app:cornerRadius="10dp" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-Or sign up with-"
        android:fontFamily="@font/montserrat_regular"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_marginTop="60dp"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="8dp"
            app:cardElevation="2dp">



            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:onClick="facebooklogin"
                android:layout_gravity="center"
                android:src="@mipmap/ic_facebook" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">


            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="googlelogin"
                android:layout_gravity="center"
                android:background="@color/design_default_color_background"
                android:src="@mipmap/ic_google"
                tools:ignore="SpeakableTextPresentCheck" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            android:layout_gravity="center"
            app:cardElevation="2dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/design_default_color_background"
                    android:onClick="twwiterlogin"
                    android:layout_gravity="center"
                    android:padding="100dp"
                    android:src="@mipmap/ic_twitter"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have A Account?"
            android:fontFamily="@font/montserrat_regular"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="newuser"
            android:text="Sign In"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/blue"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>


</LinearLayout>